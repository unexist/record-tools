#!/bin/bash
set -e
eval "$($(dirname $0)/record-config)"

# Handle record type
record_type=$(echo $1 | tr '[:upper:]' '[:lower:]')
shift

reldir=.

function mkrel() {
    local d=$reldir/$1
    echo ${d#./}
}

function absdir() {
    (cd $(dirname $1) && pwd -P)
}

while [ $(absdir $reldir) != / ]; do
    if [ -f $(mkrel .record-file-type) ]; then
        cat $(mkrel .record-file-type)
        exit
    else
        reldir=$reldir/..
    fi
done
echo md
